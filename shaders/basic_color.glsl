#ifdef VERTEX_SHADER

////////////////////////////////////////////////////////////////////////////////
layout (location = 0) in vec3 aPos;

////////////////////////////////////////////////////////////////////////////////
uniform mat4 uPVM;

////////////////////////////////////////////////////////////////////////////////
void main()
{
        gl_Position = uPVM * vec4(aPos, 1.0f);
}

#elif defined(FRAGMENT_SHADER)

////////////////////////////////////////////////////////////////////////////////
uniform vec4 uColor;

////////////////////////////////////////////////////////////////////////////////
out vec4 color;

////////////////////////////////////////////////////////////////////////////////
void main()
{
        color = uColor;
}

#endif
