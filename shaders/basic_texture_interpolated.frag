#version 400 core

////////////////////////////////////////////////////////////////////////////////
in vec2 vTexCoord;

////////////////////////////////////////////////////////////////////////////////
uniform sampler2D uTexture0;
uniform sampler2D uTexture1;
uniform float uInterpolation;

////////////////////////////////////////////////////////////////////////////////
out vec4 color;

////////////////////////////////////////////////////////////////////////////////
void main()
{
        color = mix(texture(uTexture0, vTexCoord), texture(uTexture1, vTexCoord), uInterpolation);
}
