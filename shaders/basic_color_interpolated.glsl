#ifdef VERTEX_SHADER

////////////////////////////////////////////////////////////////////////////////
layout (location = 0) in vec3 aPos;
layout (location = 1) in vec3 aColor;

////////////////////////////////////////////////////////////////////////////////
uniform mat4 uPVM;

////////////////////////////////////////////////////////////////////////////////
out vec3 vColor;

////////////////////////////////////////////////////////////////////////////////
void main()
{
        gl_Position = uPVM * vec4(aPos, 1.0f);
        vColor = aColor;
}

#elif defined(FRAGMENT_SHADER)

////////////////////////////////////////////////////////////////////////////////
in vec3 vColor;

////////////////////////////////////////////////////////////////////////////////
out vec4 color;

////////////////////////////////////////////////////////////////////////////////
void main()
{
        color = vec4(vColor, 1.0f);
}

#endif
