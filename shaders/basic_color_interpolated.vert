#version 400 core

////////////////////////////////////////////////////////////////////////////////
layout (location = 0) in vec3 aPos;
layout (location = 1) in vec3 aColor;

////////////////////////////////////////////////////////////////////////////////
uniform mat4 uPVM;

////////////////////////////////////////////////////////////////////////////////
out vec3 vColor;

////////////////////////////////////////////////////////////////////////////////
void main()
{
        gl_Position = uPVM * vec4(aPos, 1.0f);
        vColor = aColor;
}
